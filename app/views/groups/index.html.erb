

<div class="container">
  <p id="notice"><%= notice %></p>
  <p id="notice"><%= alert %></p>

  <div class="row">
    <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
    <h1><%= @user.name %>さんの Topics</h1>

        <% @topics.each do |topic| %>
        <br>
        <div class="well well-sm">
            <div class="row">
              <div class="col-md-2">
                <%= profile_img(topic.user) if profile_img(topic.user) %>
              </div>
              <div class="col-md-10">
                <p class="name"><%= topic.user.name %></p>
                <p><%= topic.created_at.strftime("%m月%d日 %H時%M分") %></p>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <p class="content"><%= topic.content %></p>
              </div>
            </div>

            <div class="row">
              <div class="col-md-12">
                <hr>
                <p><%= link_to 'コメント', group_path(topic) %></p>
              </div>
            </div>
            <!--%= render partial: 'comments/index', locals: { comments: topic.comments, topic: topic } %-->
        </div>　　
        <% end %>
        <br>
    </div>
  </div>
</div>
